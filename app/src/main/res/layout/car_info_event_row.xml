<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="10dp"
    android:scrollbars="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/row_view"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/carInfoEventsRowDate"
                android:layout_width="135dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginStart="16dp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="6dp"
                android:fontFamily="@font/oswald_bold"
                android:gravity="center"
                android:text="TextView"
                android:textColor="@color/white"
                android:textSize="24sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/carInfoEventsRowType2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/carInfoEventsRowType1"
                android:layout_width="190dp"
                android:layout_height="25dp"
                android:layout_marginTop="1dp"
                android:layout_marginEnd="11dp"
                android:layout_marginBottom="5dp"
                android:fontFamily="@font/oswald_bold"
                android:text="TextView"
                android:textColor="@color/white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/carInfoEventsRowType2"
                app:layout_constraintTop_toBottomOf="@+id/carInfoEventsRowPrice2" />

            <TextView
                android:id="@+id/carInfoEventsRowType2"
                android:layout_width="40dp"
                android:layout_height="25dp"
                android:layout_marginBottom="7dp"
                android:fontFamily="@font/oswald_bold"
                android:text="Typ:"
                android:textColor="@color/white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/carInfoEventsRowType1"
                app:layout_constraintStart_toEndOf="@+id/carInfoEventsRowDate"
                app:layout_constraintTop_toBottomOf="@+id/carInfoEventsRowPrice2" />

            <TextView
                android:id="@+id/carInfoEventsRowPrice2"
                android:layout_width="60dp"
                android:layout_height="25dp"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/oswald_bold"
                android:text="Kwota:"
                android:textColor="@color/white"
                app:layout_constraintBottom_toTopOf="@+id/carInfoEventsRowType2"
                app:layout_constraintEnd_toStartOf="@+id/carInfoEventsRowPrice"
                app:layout_constraintStart_toEndOf="@+id/carInfoEventsRowDate"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/carInfoEventsRowPrice"
                android:layout_width="138dp"
                android:layout_height="25dp"
                android:layout_marginStart="1dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="42dp"
                android:layout_marginBottom="1dp"
                android:fontFamily="@font/oswald_bold"
                android:text="TextView"
                android:textColor="@color/white"
                app:layout_constraintBottom_toTopOf="@+id/carInfoEventsRowType1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/carInfoEventsRowPrice2"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>


    </LinearLayout>
</androidx.cardview.widget.CardView>
