<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".statistics.UserStatistics"
    android:background="@drawable/background_menu_without_bar">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarUserStats"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:navigationIcon="@drawable/ic_back_arrow"
        app:title="Statystyki użytkownika"
        app:titleTextColor="@color/white" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toBottomOf="@+id/toolbarUserStats">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tvCarCount1"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:text="Liczba pojazdów:"
                android:fontFamily="@font/oswald_regular"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:gravity="end"
                android:layout_marginEnd="30dp"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:id="@+id/tvCarCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:fontFamily="@font/oswald_regular"
                android:textColor="@color/white"
                android:textSize="20sp"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tvEventCount1"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:text="Liczba wydarzeń:"
                android:fontFamily="@font/oswald_regular"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:gravity="end"
                android:layout_marginEnd="30dp"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:id="@+id/tvEventCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:fontFamily="@font/oswald_regular"
                android:textColor="@color/white"
                android:textSize="20sp"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tvFuelCount1"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:text="Liczba tankowań:"
                android:fontFamily="@font/oswald_regular"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:gravity="end"
                android:layout_marginEnd="30dp"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:id="@+id/tvFuelCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:fontFamily="@font/oswald_regular"
                android:textColor="@color/white"
                android:textSize="20sp"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tvFuelPriceAll1"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:text="Koszty całkowite za paliwo:"
                android:fontFamily="@font/oswald_regular"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:gravity="end"
                android:layout_marginEnd="30dp"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:id="@+id/tvFuelPriceAll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0.0 zł"
                android:fontFamily="@font/oswald_regular"
                android:textColor="@color/white"
                android:textSize="20sp"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:id="@+id/tvFuelPriceMonth1"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:text="Koszty miesięczne za paliwo:"
                android:fontFamily="@font/oswald_regular"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:gravity="end"
                android:layout_marginEnd="30dp"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:id="@+id/tvFuelPriceMonth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0.0 zł"
                android:fontFamily="@font/oswald_regular"
                android:textColor="@color/white"
                android:textSize="20sp"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:id="@+id/tvEventPriceFull1"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:text="Koszty całkowite za wydarzenia:"
                android:fontFamily="@font/oswald_regular"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:gravity="end"
                android:layout_marginEnd="30dp"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:id="@+id/tvEventPriceFull"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0.0 zł"
                android:fontFamily="@font/oswald_regular"
                android:textColor="@color/white"
                android:textSize="20sp"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:id="@+id/tvEventPriceMonth1"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:text="Koszty miesięczne za wydarzenia:"
                android:fontFamily="@font/oswald_regular"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:gravity="end"
                android:layout_marginEnd="30dp"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:id="@+id/tvEventPriceMonth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0.0 zł"
                android:fontFamily="@font/oswald_regular"
                android:textColor="@color/white"
                android:textSize="20sp"/>
        </TableRow>
    </TableLayout>

</androidx.constraintlayout.widget.ConstraintLayout>