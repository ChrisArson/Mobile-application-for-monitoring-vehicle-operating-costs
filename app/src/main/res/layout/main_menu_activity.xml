<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".menu.MainMenuActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background_slide_menu">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#c0c0c0"/>

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Zarządzanie pojazdami"
                android:textColor="@color/white"
                android:fontFamily="@font/oswald_regular"/>

            <Button
                android:id="@+id/buttonCars"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Twoje pojazdy"
                android:textColor="@color/white"
                android:fontFamily="@font/oswald_regular"
                android:gravity="left|center_vertical"
                android:background="@android:color/transparent" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#c0c0c0"/>

            <TextView
                android:id="@+id/textView9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Zarządzanie ewidencją zdarzeń"
                android:textColor="@color/white"
                android:fontFamily="@font/oswald_regular"/>

            <Button
                android:id="@+id/buttonEventList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:fontFamily="@font/oswald_regular"
                android:gravity="left|center_vertical"
                android:text="Przegląd zdarzeń"
                android:textColor="@color/white" />
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#c0c0c0"/>

            <TextView
                android:id="@+id/textView10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Zarządzanie statystykami"
                android:textColor="@color/white"
                android:fontFamily="@font/oswald_regular"/>

            <Button
                android:id="@+id/buttonUserStats"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:fontFamily="@font/oswald_regular"
                android:gravity="left|center_vertical"
                android:text="Statystyki użytkownika"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/buttonCarStats"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:fontFamily="@font/oswald_regular"
                android:gravity="left|center_vertical"
                android:text="Statystyki pojazdu"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/buttonFuelStationStatistics"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:fontFamily="@font/oswald_regular"
                android:gravity="left|center_vertical"
                android:text="Statystyki globalne stacji paliw"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/buttonGlobalStatistics"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:fontFamily="@font/oswald_regular"
                android:gravity="left|center_vertical"
                android:text="Statystyki globalne pojazdów"
                android:textColor="@color/white" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#c0c0c0"/>

            <TextView
                android:id="@+id/textView8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/oswald_regular"
                android:text="Zarządzanie kontem"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/buttonSettings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:fontFamily="@font/oswald_regular"
                android:gravity="left|center_vertical"
                android:text="Ustawienia"
                android:textColor="@color/white" />


        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>